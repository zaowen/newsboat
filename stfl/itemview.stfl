vbox
  @style_normal[background]:
  @info#style_normal[info]:bg=blue,fg=yellow,attr=bold
  @bind_up[bind_up]:
  @bind_down[bind_down]:
  @bind_page_up[bind_page_up]:
  @bind_page_down[bind_page_down]:
  @bind_home[bind_home]:
  @bind_end[bind_end]:
  @on_TAB:"TAB"
  label#info[title]
    text[head]:"Article '#'"
    .expand:h
    .display[showtitle]:1
  textview[article]
    style_normal[article]:
    style_end[end-of-text-marker]:fg=blue,attr=bold
    .expand:vh
    offset[article_offset]:0
    richtext:1
  vbox[hints]
    .expand:0
    .display[showhint]:1
    hbox
      .expand:0
      label#info
        text[help]:"q:Quit s:Save o:Open in Browser n:Next Unread"
        .expand:h
      label#info
        text[percent]:""
        .expand:0
        .width[percentwidth]:6
  hbox[lastline]
    .expand:0
    label[msglabel]
      text[msg]:""
      .expand:h
